<%= form_for @category, html: {class: 'form-horizontal'} do |f| %>
    <div class="control-group">
      <%= f.label t("categories.name"), class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, class: 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label t("categories.color"), class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :color, class: "minicolors" %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  categories_path, class: 'btn' %>
    </div>
<% end %>
