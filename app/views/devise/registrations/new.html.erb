<% content_for :header do %>
  <%= stylesheet_link_tag "devise.css" %>
<% end %>

<div class="container">
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		<h2><%= t('sign_up') %></h2>

		<%= f.text_field :username, :class => "login", :placeholder => t('username') %>
		<%= f.email_field :email, :class => "login", :placeholder => t('email') %>
		<%= f.password_field :password, :class => "login", :placeholder => t('password') %>
		<%= f.password_field :password_confirmation, :class => "login", :placeholder => t('password_confirmation') %>

		<div class="submit"><%= f.submit t('sign_up'), :class => "btn" %></div>
	<% end %>

	<center>
		<%= render "devise/shared/links" %>
	</center>

</div>