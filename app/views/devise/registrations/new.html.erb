<% content_for :header do %>
  <%= stylesheet_link_tag "devise.css" %>
<% end %>

<div class="container">
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		<h2>Sign up</h2>

		<%= f.text_field :username, :class => "login", :placeholder => "Username" %>
		<%= f.email_field :email, :class => "login", :placeholder => "Email" %>
		<%= f.password_field :password, :class => "login", :placeholder => "Password" %>
		<%= f.password_field :password_confirmation, :class => "login", :placeholder => "Password confirmation" %>

		<div class="submit"><%= f.submit "Sign up", :class => "btn" %></div>
	<% end %>
	
	<center>
  	<%= link_to "Sign in", new_session_path(resource_name) %>
  	|
  	<%= link_to "Forgot your password?", new_password_path(resource_name)%>
		|
		<a href="https://github.com/prellele/holydays" target="_blank">Code</a>
	</center>

</div>
