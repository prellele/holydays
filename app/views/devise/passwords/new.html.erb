<% content_for :header do %>
  <%= stylesheet_link_tag "devise.css" %>
<% end %>

<div class="container">
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
                <h2>Forgot your password?</h2>

                <%= f.email_field :email, :class => "login", :placeholder => "Email" %>

                <div class="submit"><%= f.submit "Send me reset password instructions", :class => "btn" %></div>
        <% end %>

        <center>
        <%= link_to "Sign in", new_session_path(resource_name) %>
        |
        <%= link_to "Sign up", new_registration_path(resource_name) %>
                |
                <a href="https://github.com/prellele/holydays" target="_blank">Code</a>
        </center>
</div>
