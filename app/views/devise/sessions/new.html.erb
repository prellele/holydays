<% content_for :header do %>
  <%= stylesheet_link_tag "devise.css" %>
<% end %>

<div class="container">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	
		<h2>Holydays</h2>
	
		<%= f.text_field :username, :class => "login", :placeholder => "Username" %><br />
		<%= f.password_field :password, :class => "login", :placeholder => "Password" %>

		<% if devise_mapping.rememberable? -%>
		  <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		<% end -%>

		<div class="submit"><%= f.submit "Sign in", :class => "btn" %></div>
		<div class="right"> 
			<%= link_to "Forgot your password?", new_password_path(resource_name), :class => "btn" %><br />
		</div>
	<% end %>
	
	<center>
		<%= link_to "Sign up", new_registration_path(resource_name) %>
		|
		<a href="https://github.com/prellele/holydays" target="_blank">Code</a>
	</center>
	
</div>
  <br />

