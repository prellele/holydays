<%- model_class = Event -%>
<div class="span7">
  <div class="page-header">
    <h1><%= t '.title' %></h1>
  </div>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
    <dd><%= @event.description %></dd>
    <dt><strong><%= model_class.human_attribute_name(:start) %>:</strong></dt>
    <dd><%= @event.start_at.to_date %></dd>
    <dt><strong><%= model_class.human_attribute_name(:end) %>:</strong></dt>
    <dd><%= @event.end_at.to_date %></dd>
    <dt><strong><%= model_class.human_attribute_name(:category) %>:</strong></dt>
    <dd><%= @event.category.name %></dd>
  </dl>

  <div class="form-actions">
    <%= link_to t('.back', default: t("helpers.links.back")),
                root_path, class: 'btn' %>
    <% if (@event.user == current_user) %>
      <%= link_to t('.edit', default: t("helpers.links.edit")),
                  edit_event_path(@event), class: 'btn btn-warning' %>
      <%= link_to t('.destroy', default: t("helpers.links.destroy")),
                  event_path(@event),
                  method: 'delete',
                  data: {confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?'))},
                  class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>