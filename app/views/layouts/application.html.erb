<!DOCTYPE html>
<html>
<head>
  <title>Holydays</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  
  <%= yield :header %>
  <%= favicon_link_tag %>  

<script type="text/javascript" >
$(document).ready(function(){
   setTimeout(function(){
  $(".alert").fadeOut(2500);
  }, 3000);
 });
</script>

</head>
<body>

<div class="flash">
  <%= bootstrap_flash %>
</div>
<% if user_signed_in? %>
<ul id="userEvents">
  <%= display_sum_user_events %>
</ul>
<% end %>

<% if user_signed_in? %>
<div id="header"><%= t :vacation_calendar %></div>
  <ul id="menu">
    <li><%= link_to t('calendar'), calendar_path %></li>
    <li><%= link_to t('log'), log_datas_path %></li>
    <li><%= link_to t('logout'), destroy_user_session_path, :id => 'logout', :"data-user" => current_user.id, :method => "delete" %></li>
  </ul>
<% end %>
<div id="void"></div>

<%= yield %>

</body>
</html>
