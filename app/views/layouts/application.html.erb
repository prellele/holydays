<!DOCTYPE html>
<html>
<head>
  <title>Holydays</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag "application", "chardinjs" %>
  <%= javascript_include_tag "application", "chardinjs.min" %>
  <%= csrf_meta_tags %>
  
  <%= yield :header %>
  <%= favicon_link_tag %>  

</head>
<body>

<div class="flash">
  <%= bootstrap_flash %>
</div>
<% if user_signed_in? %>
<ul id="userEvents">
  <li data-intro="<%= t("intro.used_holidays") %>" data-position="left" ><%= display_sum_user_events %></li>
</ul>
<div id="header"><%= t :vacation_calendar %></div>
  <ul id="menu">
    <li><%= link_to t('calendar'), calendar_path %></li>
    <li><%= link_to t('log'), log_datas_path %></li>
    <li><%= link_to t('logout'), destroy_user_session_path, :id => 'logout', :"data-user" => current_user.id, :method => "delete" %></li>
  </ul>
<% end %>
<div id="void"></div>

<%= yield %>

</body>
</html>
